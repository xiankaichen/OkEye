<UserControl x:Class="OkEye.Modules.ModuleCamera.Views.ViewCamera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OkEye.Modules.ModuleCamera.Views"
             xmlns:vtk="clr-namespace:Kitware.VTK;assembly=Kitware.VTK"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" >
                <StackPanel Orientation="Horizontal">
                    <Button Content="断开连接" Width="100" HorizontalAlignment="Left"
                            Command="{Binding DisconnectCameraCommand}" Margin="5,0,0,0"></Button>
                    <Button Content="单次拍照" Width="100" HorizontalAlignment="Left"
                            Command="{Binding SnapOnceCommand}" Margin="5,0,0,0"></Button>
                    <Button Content="连续拍照" Width="100" HorizontalAlignment="Left"
                            Command="{Binding SnapContinueCommand}" Margin="5,0,0,0"></Button>
                    <Button Content="点云" Width="100" HorizontalAlignment="Left"
                            Command="{Binding ShowPointCloudCommand}" Margin="21,0,0,0"></Button>
                    <Button Content="深度图" Width="100" HorizontalAlignment="Left"
                            Command="{Binding ShowDepthCommand}" Margin="5,0,0,0"></Button>
                    <Button Content="图像" Width="100" HorizontalAlignment="Left"
                            Command="{Binding ShowImageCommand}" Margin="5,0,0,0"></Button>
                </StackPanel>
                
            </Grid>



            <Grid Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid>

                            <TabControl  x:Name="DataShower"  >
                                <TabItem  x:Name="Cloud" Visibility="Collapsed" BorderThickness="0">
                                    <Grid>
                                        <Frame Background="DarkGray"></Frame>
                                    </Grid>
                                </TabItem>
                                <TabItem  x:Name="Image" Visibility="Collapsed" BorderThickness="0" >
                                    <Grid >
                                        <Image x:Name="imageTexture" Source="/Resources/image/logo.png"/>
                                    </Grid>
                                </TabItem>

                            </TabControl>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="35" />
                                </Grid.RowDefinitions>
                                <Label Content="相机参数" FontSize="18" Grid.Row="0"></Label>
                                <DockPanel Grid.Row="1">
                                <Grid >
                                    <xctk:PropertyGrid x:Name="_propertyGrid" SelectedObject="{Binding CameraInfo}"   Margin="10,10,0,0"   ShowTitle="False" ShowSummary="False" />

                                </Grid>
                            </DockPanel>
                                <StackPanel Grid.Row ="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="设置" FontSize="16" Width="80" Height="30"></Button>
                                    <Button Content="导出" FontSize="16" Width="80" Height="30" Margin="5,0,5,0"></Button>

                                </StackPanel>

                            </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
